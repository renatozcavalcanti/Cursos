    <div id="column1">
      <h2><%= @post.title %></h2>

      <div id="post">
        <%= @post.body %>
      </div>

      <hr/>

      <h3><%= @post.comments.count %> Comments</h3>

      <div id="comments">
      <% if @post.comments.any? %>
        <%= render @post.comments %>
      <% else %>
        <p>Nobody commented this post yet.</p>
      <% end %>
      </div>

      <%= render "comments/form", post: @post, comment: Comment.new %>

    </div>

    <%= render "sidebar" %>
